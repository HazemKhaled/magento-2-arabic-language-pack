{
  "name": "microes",
  "version": "0.1.0",
  "private": true,
  "description": "Knawat MarketPlace API layer",
  "scripts": {
    "dev": "npm run lint && env $(cat ./docker/development/.env) moleculer-runner --repl --hot services",
    "start": "moleculer-runner",
    "deps": "npm-check -u",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services mixins",
    "lint-fix": "eslint services mixins libs --fix",
    "prettier": "prettier services/*.js mixins/*.js libs/*.js *.js --write"
  },
  "author": "Knawat, LLC.",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.1",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "moleculer-repl": "^0.5.7",
    "npm-check": "^5.9.0",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "agile_crm": "^1.2.5",
    "bluebird": "^3.5.4",
    "elasticsearch": "^15.4.1",
    "ioredis": "^4.9.0",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^0.5.1",
    "moleculer": "^0.13.8",
    "moleculer-cron": "0.0.2",
    "moleculer-db": "^0.7.8",
    "moleculer-db-adapter-mongo": "^0.4.2",
    "moleculer-elasticsearch": "^1.1.1",
    "moleculer-web": "^0.8.5",
    "nats": "^1.2.10",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": ">= 6.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
