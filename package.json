{
  "name": "mp",
  "version": "1.9.0",
  "private": true,
  "description": "Knawat MarketPlace API layer",
  "author": "Knawat, LLC.",
  "engines": {
    "node": "10.x.x"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && tsc",
    "build:watch": "tsc -w",
    "dev": "npm run lint && env $(cat ./docker/development/.env) ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "cli": "moleculer connect TCP",
    "start": "moleculer-runner services",
    "deps": "npm-check -u",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "openapi": "node ./utilities/scripts/docs-checker.script.js",
    "prettier": "prettier services/*.ts utilities/**/*.ts *.ts --write"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/jest": "^24.0.12",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.148",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.17.24",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/request-promise": "^4.1.43",
    "@types/uuid": "^3.4.4",
    "@shopify/eslint-plugin": "^37.0.1",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "moleculer-repl": "^0.5.7",
    "prettier": "^2.0.5",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@elastic/app-search-node": "^7.6.1",
    "@google-cloud/pubsub": "^2.5.0",
    "@google-cloud/tasks": "^2.1.0",
    "bluebird": "^3.5.4",
    "elasticsearch": "^16.0.0",
    "eslint": "^7.6.0",
    "form-data": "^2.5.1",
    "ioredis": "^4.9.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mkdirp": "^0.5.1",
    "moleculer": "^0.13.11",
    "moleculer-cron": "0.0.2",
    "moleculer-db": "^0.8.7",
    "moleculer-db-adapter-mongo": "^0.4.3",
    "moleculer-elasticsearch": "^1.1.2",
    "moleculer-sentry": "0.0.9",
    "moleculer-web": "^0.8.5",
    "nats": "^1.3.0",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "uuid": "^3.3.2"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
