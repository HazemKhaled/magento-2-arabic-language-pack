.btn
  display: inline-block
  padding: 10px 16px
  border: 1px solid transparent
  border-radius: 4px
  background-image: none
  color: $white
  vertical-align: middle
  text-align: center
  white-space: nowrap
  font-weight: bold
  font-size: 16px
  line-height: 1.5em
  cursor: pointer
  touch-action: manipulation

.btn-primary
  background-image: linear-gradient(30deg, #f96f1f, #f15a3b)

.btn-block
  width: 100%